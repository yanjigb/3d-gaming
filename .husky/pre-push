
echo "ðŸ¤—ðŸ¤—ðŸ¤— Minh Anh Corp Pre-push Hook: Checking branch name... ðŸ¤—ðŸ¤—ðŸ¤—"

PROTECTED_BRANCHES="^(master|develop|main)"

if [[ $1 != *"$BRANCH"* ]]
then
  echo "ðŸš« [ FAILED ] You must use (git push origin $BRANCH)." && exit 1
fi

if [[ "$BRANCH" =~ $PROTECTED_BRANCHES ]]
then
  echo "ðŸš« [ FAILED ] Cannot push to remote $BRANCH branch, please create your own branch and use PR." && exit 1
fi

echo "âœ… [ SUCCESS ] Finish checking branch name."

exit 0